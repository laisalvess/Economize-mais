    {nome: "Sabonete 90g", preco: 2.20, loja: "Supermercado C"},
    {nome: "Detergente 500ml", preco: 2.30, loja: "Mercado A"},
    {nome: "Detergente 500ml", preco: 2.10, loja: "Mercado Central"},
    {nome: "Shampoo 400ml", preco: 18.90, loja: "FarmÃ¡cia B"},
    {nome: "Shampoo 400ml", preco: 17.50, loja: "Supermercado X"},
    {nome: "iPhone 14", preco: 5299.00, loja: "Loja Oficial"},
    {nome: "iPhone 14", preco: 5199.00, loja: "Marketplace X"}
    ];

    function buscar() {
      const termo = document.getElementById("produto").value.toLowerCase();
      const filtrados = banco.filter(p => p.nome.toLowerCase().includes(termo));

      const container = document.getElementById("resultados");
      container.innerHTML = "";

      if (filtrados.length === 0) {
        container.innerHTML = "<p>Nenhum produto encontrado</p>";
        return;
      }

      // Descobrir o preÃ§o mais barato
      const menorPreco = Math.min(...filtrados.map(p => p.preco));

      filtrados.forEach(prod => {
        const div = document.createElement("div");
        div.className = "produto";
        div.innerHTML = `<b>${prod.nome}</b><br>Loja: ${prod.loja}<br>PreÃ§o: R$ ${prod.preco.toFixed(2)}`;
        
        if (prod.preco === menorPreco) {
          div.classList.add("mais-barato");
          div.innerHTML += "<br><b>âœ… Mais barato!</b>";
        } else {
          div.classList.add("caro");
        }

        container.appendChild(div);
      });
    }
  </script>
